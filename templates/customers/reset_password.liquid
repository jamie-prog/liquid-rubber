{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="container">
  <div class="row py-5 my-5 justify-content-center">
    <div class="col-12 col-lg-7">
      
<div class="reset-password">
  <svg style="display: none">
    <symbol id="icon-error" viewBox="0 0 13 13">
      <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
      <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
      <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
      <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
    </symbol>
  </svg>
  <h1 class="h2">
    {{ 'customer.reset_password.title' | t }}
  </h1>
  <p>
    {{ 'customer.reset_password.subtext' | t: email: email }}
  </p>
  {%- form 'reset_customer_password', class: 'form reset-password-form', autocomplete: 'off' -%}
    {%- if form.errors -%}
      <ul class="form-message invalid">
        {%- for field in form.errors -%}
          <li>
            <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
              <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
              <circle cx="6.5" cy="6.5" r="5.5" fill="#9d0000" stroke="#9d0000" stroke-width="0.7"/>
              <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
              <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#9d0000" stroke-width="0.7">
            </svg> 

            {%- if field == 'form' -%}
              {{ form.errors.messages[field] }}
            {%- else -%}
              <a href="#{{ field }}">
                {{ form.errors.translated_fields[field] | capitalize }}
                {{ form.errors.messages[field] }}
              </a>
            {%- endif -%}
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
    <div class="d-flex flex-column">  
      <div class="input-container">      
        <input
          type="password"
          name="customer[password]"
          id="password"
          autocomplete="new-password"
          {% if form.errors contains 'password' %}
            aria-invalid="true"
            aria-describedby="password-error"
          {% endif %}
          class="form-control"
        >
        <label for="password" class="field__label">
          {{ 'customer.reset_password.password' | t }}
        </label>
      </div>

      <div class="input-container">      
        <input
          type="password"
          name="customer[password_confirmation]"
          id="password_confirmation"
          autocomplete="new-password"
          {% if form.errors contains 'password_confirmation' %}
            aria-invalid="true"
            aria-describedby="password_confirmation-error"
          {% endif %}
          class="form-control"
        >
        <label for="password_confirmation" class="field__label">
          {{ 'customer.reset_password.password_confirm' | t }}
        </label>

      </div>
      <div class="text-center">  
        <button class="button orange m-0">
          {{ 'customer.reset_password.submit' | t }}
        </button>
      </div>
  </div>
  {%- endform -%}
</div>

    </div>
  </div>
</div>


<script type="text/javascript">
 
  $(document).ready(function() { 
    
    function validateRequired($element){
      if($element.val().length <= 0){
        $element.nextAll(".error-message").remove();
        $element.after('<div class="error-message">This field is required.</div>').addClass('error');       
        $valid = false;
      }else{
        $valid = true;
        $element.removeClass("error").nextAll(".error-message").remove();
      }
      return $valid;
    }

    function validatePassword($element){
      if ($element.val().length >= 8 && (/[A-Z]/).test($element.val())) {
        $valid = true;
        $element.removeClass("error").nextAll(".error-message").remove();
      }else{
        $element.nextAll(".error-message").remove();          
        $element.after('<div class="error-message">Passwords must be at least 8 characters in length and contain 1 upper case letter.</div>').addClass('error')  ;
        $valid = false;
      }
      return $valid;
    }

    function validateMatch($password, $confirmPassword){
      if ($password.val() == $confirmPassword.val() ) {
        $valid = true;
        $confirmPassword.removeClass("error").nextAll(".error-message").remove();
      }else{
        $confirmPassword.nextAll(".error-message").remove();          
        $confirmPassword.after('<div class="error-message">The password confirmation must match the provided password</div>').addClass('error')  ;
        $valid = false;
      }
      return $valid;
    }

 

 
    $('body').on('click', '.reset-password-form button' , function() {
      let $validPassword = false, 
          $validConfirmPassword = false, 
          $validMatch = false;
              
      const $password = $("#password"),
            $confirmPassword =  $("#password_confirmation")

   
      $validPassword = validateRequired($password);
      if($validPassword){
        $validPassword = validatePassword($password);
      }
      
      $validConfirmPassword = validateRequired($confirmPassword);
      if($validConfirmPassword){
        $validMatch = validateMatch($password, $confirmPassword);
      }

      if($validPassword && $validConfirmPassword && $validMatch){      
        return true
      }
      return false

      
    });

   
  });
</script>
